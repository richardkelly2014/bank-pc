<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="mainPane"
            xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <FlowPane orientation="HORIZONTAL" fx:id="realPane" vgap="10" hgap="10">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <VBox alignment="CENTER">
                <JFXButton fx:id="btnFund" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY">
                    <graphic>
                        <FontIcon iconLiteral="fab-bitbucket" iconSize="30" iconColor="seagreen"/>
                    </graphic>
                </JFXButton>
                <Label text="基金"/>
            </VBox>

            <VBox alignment="CENTER">
                <JFXButton fx:id="btnStock" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY">
                    <graphic>
                        <FontIcon iconLiteral="fab-cc-visa" iconSize="30" iconColor="seagreen"/>
                    </graphic>
                </JFXButton>
                <Label text="股票"/>
            </VBox>

        </FlowPane>
    </center>
</BorderPane>