<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import java.lang.Integer?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import com.jfoenix.controls.JFXTreeTableColumn?>
<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <top>

    </top>
    <center>
        <StackPane>
            <children>
                <VBox>
                    <children>
                        <JFXTreeTableView fx:id="recordTable" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                            <columns>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnCode" minWidth="100" text="编码"/>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnName" minWidth="200" text="名称"/>

                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnType" minWidth="100" text="类型"/>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnInvestType" minWidth="100" text="投资类型"/>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnRisk" minWidth="100" text="风险等级"/>

                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnSetup" minWidth="80" text="成立日期"/>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnAsset" minWidth="100" text="资产规模(亿元)"/>
                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnShare" minWidth="100" text="份额规模(亿份)"/>

                                <JFXTreeTableColumn sortable="false" fx:id="fundTreeTableColumnCompany" minWidth="200" text="基金公司"/>

                                <JFXTreeTableColumn sortable="false" fx:id="columnOperation" maxWidth="Infinity" minWidth="200"
                                                    text="操作"/>
                            </columns>
                        </JFXTreeTableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <padding>
                                <Insets top="5" left="20" right="20" bottom="5"/>
                            </padding>
                            <children>
                                <Label text="总条数:"/>
                                <Label fx:id="totalLabel" style="-fx-text-fill: rgba(37,101,252,0.75);" text="1"/>
                                <JFXComboBox fx:id="pageSize">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <Integer fx:value="100"/>
                                            <Integer fx:value="200"/>
                                        </FXCollections>
                                    </items>
                                    <value>
                                        <Integer fx:value="100"/>
                                    </value>
                                </JFXComboBox>

                                <JFXButton fx:id="btnPrev" buttonType="RAISED"
                                           style="-fx-background-color:WHITE;" text="上一页"/>

                                <Label fx:id="pageNo" text="1"/>

                                <Label text="/"/>

                                <Label fx:id="totalPage" text="1"/>

                                <Label text="页"/>

                                <JFXButton fx:id="btnNext" buttonType="RAISED"
                                           style="-fx-background-color:WHITE;" text="下一页"/>

                            </children>
                        </HBox>
                    </children>
                </VBox>
                <JFXSpinner fx:id="spinnerInfo" radius="13" startingAngle="0" styleClass="green-spinner" visible="false"
                            StackPane.alignment="CENTER"/>
            </children>
        </StackPane>
    </center>
</BorderPane>